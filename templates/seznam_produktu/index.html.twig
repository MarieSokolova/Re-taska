{% extends 'base.html.twig' %}

{% block title %}Seznam produktů{% endblock %}

{% block body %}
<div class="jumbotron">
<div class="container text-center">
<h1>Seznam produktů</h1>
</div>
</div>
<br>
<div class="container">
        <!-- Example row of columns -->
        <div class="row">
        {% for product in products %}
          <div class="col-md-4">
            <a href="{{ path('detail_produktu', {'id': product.id}) }}"><h3>{{ product.nazev }}</h3></a>
            <p>{{ product.cena }} Kč</p>
            <p><a class="btn btn-primary" href="{{ path('objednavka', {'id': product.id}) }}" role="button">Objednat</a></p>
            </div>
            {% endfor %}
            </div>
                   
{% endblock %}
